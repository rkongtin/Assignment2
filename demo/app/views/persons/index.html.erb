<ul class="toolbar">
    <li class="header"><%= link_to 'HOME', welcome_index_path, method: :get, :class => "header" %></li>
    <li class="header"><%= link_to 'LIST OF PEOPLE', persons_path, method: :get, :class => "highlighted" %></li>
    <li class="header"><%= link_to 'DISPLAY OF PEOPLE', persons_path, method: :get, :class => "header" %></li>
</ul>
<br><br>
<table>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Weight</th>
        <th>Height</th>
        <th>Country</th>
        <th>Favorite Color</th>
        <th colspan="3"></th>
    </tr>
    
    <% @persons.each do |person| %>
        <tr>
            <td><%= person.name %></td>
            <td><%= person.age %></td>
            <td><%= person.weight %></td>
            <td><%= person.height %></td>
            <td><%= person.country %></td>
            <td><%= person.favorite_color %></td>
            <div class="links">
            <td><%= link_to 'SHOW', person_path(person) %></td>
            <td><%= link_to 'EDIT', edit_person_path(person) %></td>
            <td><%= link_to 'DELETE', person_path(person), method: :delete, 
                    data: { confirm: 'Are you sure?' } %></td>
            </div>
        </tr>
    <% end %>
</table>
<br><br>
<%= link_to 'ADD A NEW PERSON', new_person_path, :class => "footer" %>

<br><br><br>


<% @persons.each do |person| %>
<div id="square">
    <%= person.name %>
    <%= person.age %>
</div>
<% end %>
